<!DOCTYPE html>
<html>
  <head>
    <title>The Best Places on Earth</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>The Best Places on Earth</h1>
    <div class="container">
      <ul>
          <% places.forEach((place) => { %>
            <li>
              <a href="/<%= place._id%>">
                <%= place.name+" "%><span><%= place.type %></span>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
      <div id="map"></div>
		<h3>Add new place: </h3>
		<form method="POST" action="/">
			<label>Name:</label>
			<input type="" name="name" placeholder="Name">
      <select name="type" size="1">
        <option value="bookstore">Bookstore</option>
        <option value="coffeeshop">Coffeeshop</option>
      </select>
      <label>Address</label>
      <!-- <input type="text" name="address" placeholder="Your address" >
			<input type="submit" name="address"> -->
      <input type="text" name="latitude" placeholder="Latitude" >
      <input type="text" name="longitude" placeholder="Longitude">
			<input type="submit" name="">
		</form>
    <script type="text/javascript">var myPlaces = <%- JSON.stringify(places) %>;</script>
		<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
		<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB9--2RMv1FcCI9Jw79209WqA--xdKgqOk"></script>
		<script type="text/javascript" src="/javascripts/main.js"></script>
  </body>

</html>
